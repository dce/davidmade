require 'mustache'
require 'yaml'
require 'rdiscount'

class Post < Mustache
  include Comparable

  def initialize(file_path)
    @path = file_path
    @meta, @body = File.open(@path).read.split(/\n\n/, 2)
    @meta = YAML.load(@meta)
    self.template = File.open("templates/_#{type}.html.mustache").read
  end

  def self.all
    Dir.glob("posts/*").map {|f| new(f) }.sort.reverse
  end

  def date
    Date.parse(@meta["date"])
  end

  def title
    @meta["title"]
  end

  def file
    @meta["file"]
  end

  def body
    RDiscount.new(@body).to_html if @body
  end

  def type
    @meta["type"] || "post"
  end

  def <=>(other)
    self.date <=> other.date
  end
end

class Layout < Mustache
  self.template_file = "templates/layout.html.mustache"
end

task :build do |t|
  layout = Layout.new
  layout[:yield] = Mustache.render(
    File.open("templates/index.html.mustache").read,
    :posts => Post.all)

  File.open("public/index.html", "w") do |index|
    index.write(layout.render)
  end
end
